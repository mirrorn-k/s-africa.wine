<?xml version='1.0' encoding='UTF-8'?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    {% for sitemapUrl in sitemapUrls %}
    <url>
        <loc>{{ sitemapUrl.loc }}</loc>
        {% if sitemapUrl.lastmod %}
        <lastmod>{{ sitemapUrl.lastmod|date("Y-m-d\\TH:i:sP", "UTC") }}</lastmod>
        {% endif %}
        {% if sitemapUrl.changefreq %}
        <changefreq>{{ sitemapUrl.changefreq }}</changefreq>
        {% endif %}
        {% if sitemapUrl.priority %}
        <priority>{{ sitemapUrl.priority }}</priority>
        {% endif %}
    </url>
    {% endfor %}
</urlset>
